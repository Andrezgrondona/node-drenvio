<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        h1 {
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f5f5f5;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        
        td:nth-child(2) {
            color: green;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Productos en Stock</h1>
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                </tr>
            </thead>
            <tbody>
                <% productosEnStock.forEach(function(product) { %>
                <tr>
                    <td><%= product.name %></td>
                    <td>$ <%= product.basePrice %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
